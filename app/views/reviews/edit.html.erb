<h1>Editar reseña</h1>

<%= simple_form_for([@room, @review]) do |f| %>
    <div id="rating-form">
      <label>Calificación</label>
    </div>
    <%= f.input :comment %>
    <%= f.button :submit %>
<% end %>

<script>
    $('#rating-form').raty({
        path: '/assets/',
        scoreName: 'review[rating]'
    });
</script>